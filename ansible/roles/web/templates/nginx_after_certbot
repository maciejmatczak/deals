server {
    server_name deals.ellox.science www.deals.ellox.science;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /home/ellox/deployed2/deals//releases/20181211175411Z;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/ellox/deployed2/deals//releases/20181211175411Z/deals.sock;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/deals.ellox.science/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/deals.ellox.science/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}

server {
    if ($host = www.deals.ellox.science) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = deals.ellox.science) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name deals.ellox.science www.deals.ellox.science;
    return 404; # managed by Certbot
}